{
    "name": "hamog/payment",
    "description": "Payment integration system in Laravel",
    "keywords": [
        "hamog",
        "payment"
    ],
    "homepage": "https://github.com/hamog/payment",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Hashem Moghaddari",
            "email": "hashemm364@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hamog\\Payment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hamog\\Payment\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hamog\\Payment\\PaymentServiceProvider"
            ],
            "aliases": {
                "Payment": "Hamog\\Payment\\PaymentFacade"
            }
        }
    }
}
